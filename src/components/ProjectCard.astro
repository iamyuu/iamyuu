---
import type { Project } from '@/constants/projects';

type Props = Project;

const { title, techs, isComingSoon } = Astro.props;
const formatTechs = (values: string[]) => values.toString().replaceAll(',', ' â€¢ ');
---

<div
	class:list={{
		'group flex justify-between items-center rounded-md border border-neutral-700 p-4': true,
		'cursor-pointer transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400': !isComingSoon,
	}}
>
	<div class='flex flex-col space-y-2'>
		<p class='text-neutral-100'>{title}</p>
		<p>{formatTechs(techs)}</p>
	</div>

	{
		isComingSoon ? (
			<p class='w-fit h-fit rounded-md bg-neutral-900 px-4 py-1'>Soon</p>
		) : (
			<svg width='18' height='18' viewBox='0 0 18 18' fill='none' class='transition-all duration-300 group-hover:translate-x-1'>
				<path d='M5.25 12.75L12.75 5.25' stroke='#999999' stroke-linecap='round' stroke-linejoin='round' />
				<path d='M5.25 5.25H12.75V12.75' stroke='#999999' stroke-linecap='round' stroke-linejoin='round' />
			</svg>
		)
	}
</div>
